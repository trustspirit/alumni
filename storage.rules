rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Helper: check if user has admin or manager role via Firestore user doc
    function isAdminOrManager() {
      return request.auth != null
        && firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role in ['admin', 'manager'];
    }

    // Helper: restrict MIME types to explicit allowlist
    function isAllowedImageType() {
      return request.resource.contentType in ['image/jpeg', 'image/png', 'image/webp'];
    }

    // Events images
    match /events/{allPaths=**} {
      allow read: if true;
      allow write: if isAdminOrManager()
        && request.resource.size < 5 * 1024 * 1024
        && isAllowedImageType();
    }

    // News images
    match /news/{allPaths=**} {
      allow read: if true;
      allow write: if isAdminOrManager()
        && request.resource.size < 5 * 1024 * 1024
        && isAllowedImageType();
    }

    // Gallery images
    match /gallery/{allPaths=**} {
      allow read: if true;
      allow write: if isAdminOrManager()
        && request.resource.size < 10 * 1024 * 1024
        && isAllowedImageType();
    }

    // Profile images â€” scoped to user's own subfolder
    match /profiles/{uid}/{filename} {
      allow read: if true;
      allow write: if request.auth != null
        && request.auth.uid == uid
        && request.resource.size < 2 * 1024 * 1024
        && isAllowedImageType();
    }
  }
}
