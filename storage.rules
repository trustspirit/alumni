rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    function isSignedIn() {
      return request.auth != null;
    }

    function isAllowedImageType() {
      return request.resource.contentType in ['image/jpeg', 'image/png', 'image/webp'];
    }

    // Events images
    match /events/{allPaths=**} {
      allow read: if true;
      allow write: if isSignedIn()
        && request.resource.size < 600 * 1024
        && isAllowedImageType();
    }

    // News images
    match /news/{allPaths=**} {
      allow read: if true;
      allow write: if isSignedIn()
        && request.resource.size < 5 * 1024 * 1024
        && isAllowedImageType();
    }

    // Gallery images
    match /gallery/{allPaths=**} {
      allow read: if true;
      allow write: if isSignedIn()
        && request.resource.size < 10 * 1024 * 1024
        && isAllowedImageType();
    }

    // Profile images â€” scoped to user's own subfolder
    match /profiles/{uid}/{filename} {
      allow read: if true;
      allow write: if isSignedIn()
        && request.auth.uid == uid
        && request.resource.size < 500 * 1024
        && isAllowedImageType();
    }
  }
}
